<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baka">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/profile_image"
            android:src="@drawable/ic_user_profile"
            android:clickable="true" />

        <View
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/profile_image"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:id="@+id/pr_view"

            android:background="#FF770F"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pr_rel"
            android:background="#000000"
            android:layout_below="@id/pr_view"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <TextView

                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="7dp"
                android:inputType="textPersonName"
                android:textColorHint="#2EB9FF"
                android:id="@+id/txtuserName_edit"
                android:textColor="#2EB9FF"
                android:text=""
                android:hint="User name" />

            <EditText
                android:inputType="textPersonName"
                android:textColorHint="#2EB9FF"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                android:paddingLeft="7dp"
                android:layout_below="@id/txtuserName_edit"
                android:hint="Enter name"
                android:id="@+id/txtName_edit"
                android:textColor="#2EB9FF"
                android:editable="true" />


            <EditText
                android:inputType="textPersonName"
                android:textColorHint="#2EB9FF"
                android:textSize="15dp"
                android:hint="Enter Surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="7dp"
                android:layout_below="@id/txtName_edit"

                android:id="@+id/txtSurname_edit"
                android:textColor="#2EB9FF"
                android:editable="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/pr_view1"
            android:layout_below="@id/pr_rel"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#FF770F"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/pr_view5"
            android:layout_below="@id/pr_view1"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:background="#FF770F"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pr_view2"
            android:background="#000000"
            android:layout_below="@id/pr_view5"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <EditText
                android:inputType="number"
                android:textColorHint="#2EB9FF"
                android:hint="Enter age"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="7dp"
                android:id="@+id/txtAge_edit"
                android:textColor="#2EB9FF"
                android:editable="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/pr_view3"
            android:layout_below="@id/pr_view2"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#FF770F"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/pr_view6"
            android:layout_below="@id/pr_view3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#FF770F"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pr_rel2"
            android:background="#000000"
            android:layout_below="@id/pr_view6"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <EditText
                android:inputType="textPersonName"
                android:textColorHint="#2EB9FF"
                android:hint="Enter Own Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="7dp"
                android:textSize="15dp"
                android:id="@+id/txtCellNumber_edit"
                android:textColor="#2EB9FF"
                android:editable="true" />

            <EditText
                android:inputType="textPersonName"
                android:textColorHint="#2EB9FF"
                android:hint="Enter Parent Number"
                android:textSize="15dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="7dp"
                android:layout_below="@id/txtCellNumber_edit"
                android:id="@+id/txtParentCellNumber_edit"
                android:textColor="#2EB9FF"
                android:editable="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/pr_view4"
            android:layout_below="@id/pr_rel2"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#FF770F"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pr_view4"
            android:id="@+id/pr_button"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_buttons"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp" />


    </RelativeLayout>
</ScrollView>