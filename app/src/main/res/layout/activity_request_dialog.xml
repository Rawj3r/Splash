<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/requestB">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNameRequest"
        android:hint="@string/hint_enter_name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtAmountRequest"
        android:layout_alignStart="@+id/txtAmountRequest" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtAmountRequest"
        android:layout_below="@+id/txtNameRequest"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint_enter_amount" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancelRequest"
        android:layout_below="@+id/txtAmountRequest"
        android:layout_alignLeft="@+id/txtAmountRequest"
        android:layout_alignStart="@+id/txtAmountRequest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:id="@+id/btnRequest"
        android:layout_below="@+id/txtAmountRequest"
        android:layout_alignRight="@+id/txtAmountRequest"
        android:layout_alignEnd="@+id/txtAmountRequest" />
</RelativeLayout>
