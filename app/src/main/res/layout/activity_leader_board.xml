<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baka">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/ld_relativeL1"
        android:background="@drawable/dashbuttons_color2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level_txt"
            android:text="LEVEL : "
            android:textColor="#FFFFFF"
            android:paddingLeft="7dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ld_username"
            android:text="Username"
            android:paddingRight="7dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/l_number_txt"
            android:layout_toRightOf="@+id/level_txt"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:paddingLeft="1dp"
            android:text="1"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ld_Ranks"
        android:text="Rank"
        android:layout_alignParentLeft="true"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/ld_relativeL1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/ld_player"
        android:layout_centerHorizontal="true"
        android:text="Players"
        android:layout_below="@+id/ld_relativeL1"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ld_time"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ld_relativeL1"
        android:layout_alignParentRight="true"
        android:text="Time"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/leaderboard_view"
        android:layout_below = "@+id/ld_time"
        android:layout_marginLeft="15dp"
        android:background="#FF770F"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/list"
        android:layout_below="@id/leaderboard_view"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>


</RelativeLayout>
